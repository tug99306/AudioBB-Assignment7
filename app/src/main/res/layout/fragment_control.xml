<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ControlFragment">

    <TextView
        android:id="@+id/durationText"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/durationBar"
        tools:layout_editor_absoluteY="107dp" />

    <SeekBar
        android:id="@+id/durationBar"
        android:layout_width="298dp"
        android:layout_height="39dp"
        android:clickable="true"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="now playing:"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/durationBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playButton" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="69dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        app:icon="@android:drawable/ic_media_pause"
        app:iconGravity="textEnd"
        app:iconSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/durationBar"
        app:layout_constraintEnd_toStartOf="@+id/playButton"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="69dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        app:icon="@android:drawable/ic_media_play"
        app:iconGravity="textEnd"
        app:iconSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/durationBar"
        app:layout_constraintEnd_toStartOf="@+id/stopButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="69dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        app:icon="?android:attr/textCursorDrawable"
        app:iconGravity="textEnd"
        app:iconSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/durationText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>